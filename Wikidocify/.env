# Database Configuration
DB_HOST=postgres
DB_USER=doc_db_admin
DB_PASSWORD=SecurePass889
DB_NAME=documents_db
DB_PORT=5432
DB_SSLMODE=disable

# Service Ports
UPLOAD_SERVICE_PORT=8081
SEARCH_SERVICE_PORT=8080

# Kafka Configuration
KAFKA_BROKER=kafka:9092
KAFKA_TOPIC=document-events
KAFKA_BATCH_SIZE=100
KAFKA_TIMEOUT=30s
KAFKA_GROUP_ID=elasticsearch-service

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_INDEX=wikidocify_documents
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_BATCH_SIZE=100

# Document Service Configuration (for search service)
DOC_SERVICE_URL=http://file-upload-service:8081
DOC_SERVICE_TIMEOUT=30s
DOC_SERVICE_API_KEY=

# Search Service Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_INTERVAL=5m
ENABLE_SYNC=true

# Gin/Server Configuration
GIN_MODE=release

# Optional: Kibana, Kafka UI, etc. (no env needed unless you add auth)

